@using BookOrders.Areas.Identity.Data
@inject SignInManager<BookOrdersUser> SignInManager
@inject UserManager<BookOrdersUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark fa fa-sign-out fa-2x"
                        data-toggle="tooltip" title="@Localizer["Logout"]" data-placement="bottom"></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fa fa-user-plus fa-2x" asp-area="Identity" asp-page="/Account/Register"
               data-toggle="tooltip" title="@Localizer["Register"]" data-placement="bottom"></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark fa fa-sign-in fa-2x" asp-area="Identity" asp-page="/Account/Login"
               data-toggle="tooltip" title="@Localizer["Login"]" data-placement="bottom"></a>
        </li>
    }
</ul>
