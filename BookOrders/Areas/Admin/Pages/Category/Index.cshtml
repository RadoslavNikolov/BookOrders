@page
@model BookOrders.Areas.Admin.Pages.Category.IndexModel
@{
    Layout = "/Areas/Admin/Pages/Shared/_Layout_Fluid.cshtml";
    ViewData["Title"] = Localizer["Categories"];
}

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="form-group">
    <a class="btn btn-link text-success fa fa-plus-square-o fa-3x" asp-area="Admin" asp-page="/Category/New" data-toggle="tooltip" title="@Localizer["Newa"]"></a>
</div>
<div class="mvc-grid-utils table-wrapper">
    <div class="mvc-table-header">
        @{
            var uniqueId = "grid1";
        }
        <span></span>
        <div class="mvc-table-header-buttons">
            <span class="mvc-grid-toggle-btn fa fa-minus content-toggle text-primary" data-toggle="tooltip" title="Скриване/Показване"></span>
            <span class="mvc-grid-reload-btn fa fa-refresh fa-2x text-primary" data-placement="bottom" data-toggle="tooltip" title="Презареждане на таблицата"></span>
            @*<span class="mvc-grid-excel-export-btn fa fa-file-excel-o fa-2x text-primary" data-uniqueid="@uniqueId" data-controller="MiniProcedureReport" data-action="SummarizedOffersExport" data-toggle="tooltip" title="Експорт в Excel"></span>*@
        </div>
    </div>
    <div class="mvc-table-content" id="@uniqueId">
        @Html.AjaxGrid(Url.Page("/Category/List"))
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/Admin/category.js"></script>
}
